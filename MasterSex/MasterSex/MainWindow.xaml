<Window x:Class="MasterSex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterSex"
        mc:Ignorable="d"
        Title="MasterSex" MinHeight="550" MinWidth="900"
        WindowStartupLocation="CenterScreen" Height="550" Width="900">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WrapPanel HorizontalAlignment="Center">
            <Image Source="/resources/master.png"
                   Width="40" Margin="5"/>
            <TextBlock Text="Мастер пол" FontSize="20"
                       HorizontalAlignment="Center"
                       Margin="5" FontWeight="Bold"/>
        </WrapPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"
               Grid.Row="1"/>
    </Grid>
</Window>
